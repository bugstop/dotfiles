" Source your .vimrc
source ~/.vimrc
"source ~/.vim/vimrc

set showmode

"unused ops:
"* ** .g  j*.m
" * q  *  .* z

" <Leader>f{char} to move to {char}
map  <Leader>f <Plug>(easymotion-bd-f)
nmap <Leader>f <Plug>(easymotion-bd-f)

" s{char}{char} to move to {char}{char}
nmap s <Plug>(easymotion-bd-f2)

" Move to line
map <Leader>l <Plug>(easymotion-bd-jk)
nmap <Leader>l <Plug>(easymotion-bd-jk)

" Move to word
map  <Leader>w <Plug>(easymotion-bd-w)
nmap <Leader>w <Plug>(easymotion-bd-w)

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
noremap <leader>k :action ReformatCode<CR>
noremap <leader>m :action CommentByLineComment<CR>
noremap <leader>d :action Debug<CR>
noremap <leader>x :action ContextRun<CR>
noremap <leader>c :action RunClass<CR>
noremap <leader>a :action Stop<CR>
noremap <leader>t :action ActivateTerminalToolWindow<CR>
noremap <leader>o :action Terminal.OpenInTerminal<CR>

"T unused ops:
". cde*g*
" opq*..  wxyz

noremap tn :action PreviousTab<CR>
noremap ti :action NextTab<CR>

noremap tt :action ShowNavBar<CR>
noremap ts :action SearchEverywhere<CR>
noremap ta :action GotoAction<CR>
noremap tr :action RecentFiles<CR>
noremap tf :action FindInPath<CR>
noremap th :action FileStructurePopup<CR>

noremap T :action CloseContent<CR>

noremap tv :action IdeaVim.ReloadVimRc.reload<CR>

